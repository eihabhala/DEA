# AI Trading Expert Advisor - VPS Environment Configuration
# Copy this file to .env and modify the values for your setup

# ============================================================================
# PLATFORM CONFIGURATION
# ============================================================================
MT_PLATFORM=MT5                    # MT4 or MT5
DEPLOY_MODE=production              # production or development

# ============================================================================
# METATRADER SETTINGS
# ============================================================================
# MetaTrader 4 Configuration
MT4_SERVER=Demo-Server              # Your MT4 broker server
MT4_LOGIN=12345678                  # Your MT4 account number
MT4_PASSWORD=change_me_mt4          # Your MT4 account password

# MetaTrader 5 Configuration  
MT5_SERVER=Demo-Server              # Your MT5 broker server
MT5_LOGIN=12345678                  # Your MT5 account number
MT5_PASSWORD=change_me_mt5          # Your MT5 account password

# ============================================================================
# WEBHOOK CONFIGURATION
# ============================================================================
WEBHOOK_PORT=5000                   # Port for webhook server
WEBHOOK_TOKEN=your_secret_token_here # Authentication token for webhooks

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=trading_db              # Database name
POSTGRES_USER=trader                # Database user
POSTGRES_PASSWORD=secure_db_password # Database password (change this!)

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=secure_redis_password # Redis password (change this!)

# ============================================================================
# VNC CONFIGURATION (for GUI access)
# ============================================================================
VNC_PASSWORD=vnc_password           # VNC password for remote access
VNC_ENABLED=false                   # Set to true to enable VNC access

# ============================================================================
# SSL CONFIGURATION
# ============================================================================
SSL_DOMAIN=                         # Your domain name (optional)
SSL_EMAIL=                          # Email for SSL certificate (required if domain set)

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
GRAFANA_PASSWORD=admin_password     # Grafana admin password
MONITORING_ENABLED=true             # Enable monitoring stack

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true                 # Enable automatic backups
BACKUP_RETENTION=7                  # Days to keep backups
BACKUP_SCHEDULE=0 2 * * *          # Cron schedule for backups (2 AM daily)

# Optional: S3 Backup Configuration
S3_BACKUP_BUCKET=                   # S3 bucket for remote backups (optional)
S3_ACCESS_KEY=                      # S3 access key (optional)
S3_SECRET_KEY=                      # S3 secret key (optional)

# ============================================================================
# RESOURCE LIMITS
# ============================================================================
MT_MEMORY_LIMIT=2g                  # Memory limit for MetaTrader containers
MT_CPU_LIMIT=1.0                    # CPU limit for MetaTrader containers
WEBHOOK_MEMORY_LIMIT=512m           # Memory limit for webhook server
WEBHOOK_CPU_LIMIT=0.5               # CPU limit for webhook server

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Rate limiting
WEBHOOK_RATE_LIMIT=1000             # Max requests per minute per IP

# Allowed IPs (comma-separated, leave empty for no restriction)
WEBHOOK_ALLOWED_IPS=                # Example: 203.0.113.1,203.0.113.2

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================
# Timezone
TZ=UTC                              # Timezone for containers

# Log levels
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR

# Network settings
DOCKER_NETWORK_SUBNET=172.20.0.0/16 # Docker network subnet

# Health check intervals
HEALTH_CHECK_INTERVAL=30s           # Container health check interval
HEALTH_CHECK_TIMEOUT=10s            # Health check timeout
HEALTH_CHECK_RETRIES=3              # Health check retries

# ============================================================================
# DEVELOPMENT SETTINGS (only for development mode)
# ============================================================================
DEBUG_MODE=false                    # Enable debug mode
FLASK_DEBUG=false                   # Enable Flask debug mode
ENABLE_PROFILING=false              # Enable performance profiling